<%= form_for @user, method: "put" do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br/>
  <%= f.label :email %>
  <%= f.text_field :email %><br/>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number%><br><br>
  <%= f.label :avatar, 'Profile Picture' %>
  <%= f.file_field :avatar %>
  <%= f.submit class: 'btn btn-warning' %>
<% end %>
<br>
<%= link_to 'delete account', user_path, method: 'delete', data: {confirm: "Are you sure you want to delete your account?"}  %>
