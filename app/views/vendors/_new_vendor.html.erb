<div id="newvendorform"class="container">
  <h1>New Vendor</h1>
  <%= form_for @vendor do |f|%>
    <div class="form-group">
      <%= f.label :username, 'Username:' %><br>
      <%= f.text_field :username, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :name, 'Business Name:' %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'Email:' %><br>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Password:' %><br>
      <%= f.password_field :password, class: 'form-control' %><br>
      <%= f.label :password, 'Confirm Password' %><br>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :address, 'Address:' %><br>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, 'Phone Number:' %><br/>
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
    <%= f.submit 'Sign Up!', class: 'btn btn-warning' %>
  <% end %>
</div>
