<div id="dealindexpage">
  <div id="dealindexitems">
    <% @deals.each_with_index do |deal, index| %>
      <%=render partial: '/deals/deal', locals: {deal: deal, index: index} %>
    <% end %>
  </div>
  <div id="dealindexinfo" class="container">
    <h2 id="deal-title">Important things to consider:</h2>
    <ul>
      <li><h4>If you make a purchase leave plenty of time to pick up.</h4></li>
      <li><h4>If you cannot pick up, contact the vendor to see if they will hold the item for you.</h4></li>
      <li><h4>If you need to cancel your purchase contact the vendor.</h4></li>
      <li><h4>Buy items you are going to consume immediately.</h4></li>
      <li><h4><a href="#">Click here</a> for all terms and conditions.</h4></li>
    </ul>
  </div>
  <div id="dealwelcome">
    <h1 id="welcome-user">A'hoy!</h1>
    <h2 id="welcome-user">Grab a Deal!</h2>
  </div>
</div>

<!-- renders modal for login (user & vendor) -->
<%= render 'welcome/vendor_login', locals: {@user => @user, @vendor => @vendor}%>
<%= render 'welcome/user_login', locals: {@user => @user, @vendor => @vendor}%>
<!-- renders modal for vendor sign up -->
<%= render 'welcome/signup_vendor', locals: {@vendor => @vendor} %>
<%= render 'user/new_user', locals: {@user => @user, @vendor => @vendor}%>
