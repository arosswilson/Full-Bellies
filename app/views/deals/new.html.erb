<%= form_for @deal do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>
  <%= f.label :description %><br/>
  <%= f.text_area :description, cols:50, rows: 10 %><br/>
  <%= f.label :item_quantity, size: 6 %><br/>
  <%= f.number_field :item_quantity %><br/>
  <%= f.label :item_price %><br/>
  <%= f.number_field :item_price, size: 6, step: 0.01 %><br/>
  <%= f.submit %>
<% end %>